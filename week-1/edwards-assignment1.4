 -- The following vehicles have been added to the racetrack --
 Truck: <Model>
 Car: <Model>
 Jeep: <Model>

*/

/**
* Params: firstName, lastName, assignment
* Response: output 
* Description: Returns a well-formatted string header
*/

exports.display = function (firstName, lastName, assignment) {
    let output = '\n' + firstName + ' ' + lastName + '\n' + assignment + '\nDate: ' +
      new Date().toLocaleDateString('en-US')
  
    return output
  }
  
// start program
function Car(model)
{
    this.model = model;
}
Car.prototype.start = function ()
{
    console.log("Car added to the racetrack!");
}

function Truck (model, year)
{
    this.model = model;
    this. year = year;
}
Truck.prototype.start =function ()
{
    console.log ("Truck added to the racetrack!");
}
function Jeep (model, year, color)
{
    this.model = model;
    this. year = year;
    this.color = color;
}
Jeep.prototype.start = function ()
{
    console.log ("Jeep added to the racetrack!");
}

var racetrack =[];

function driveIt(vehicle)
{
    vehicle.start();

    racetrack.push(vehicle);
}

var fusion = new Car("Fusion");
var silverado = new Truck ("Silverado", "2019");
var wrangler = new Jeep ("Wrangler","1999", "Green");

console.log("");

driveIt(fusion);
driveIt(silverado);
driveIt(wrangler);

console.log('\n-- The following vehicles have been added to the racetrack --');
for(var x = 0; x < racetrack.length; x++)
{
    console.log(racetrack[x].constructor.name + ": " + racetrack[x].model);
}
